<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login_register.LoginActivity"
    android:background="@drawable/backgroun10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="用户登录"
        android:background="#95fafa"
        android:textSize="24sp"
        />

    <RelativeLayout
        android:layout_width="357dp"
        android:layout_height="506dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#abcceff7"
        android:elevation="4dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/skip"
            android:layout_width="161dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="128dp"
            android:background="#b4e1f9"
            android:text="跳过"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="43dp"
            android:layout_height="41dp"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/psd"
            android:layout_marginStart="-2dp"
            android:background="@drawable/lock" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:src="@drawable/app_logo" />

        <EditText
            android:id="@+id/username"
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="120dp"
            android:background="#fff"
            android:hint="         用户名"
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/psd"
            android:layout_width="249dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/username"
            android:layout_gravity="center"
            android:layout_marginTop="187dp"
            android:background="#fff"
            android:hint="            密码"
            android:paddingLeft="30dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="162dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="188dp"
            android:background="#b4e1f9"
            android:text="登录"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="39dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/username"
            android:layout_marginStart="21dp"
            android:background="@drawable/wode"

            />

        <TextView
            android:id="@+id/toregister"
            android:layout_width="187dp"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="新用户？点击这里注册"
            android:textColor="#fafaf7f7"
            android:textSize="18dp" />

    </RelativeLayout>



</LinearLayout>