<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login_register.RegisterActivity"
    android:background="@drawable/background3"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:textSize="24dp"
        android:gravity="center"
        />

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="459dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#c0cceff7"
        android:elevation="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="52dp"
            android:layout_height="41dp"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/psd"
            android:background="@drawable/lock"
            tools:ignore="RtlCompat" />

        <ImageView
            android:layout_width="102dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:src="@drawable/touxiang" />

        <EditText
            android:id="@+id/username"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="162dp"
            android:background="#fff"
            android:hint="         账号"
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/psd"
            android:layout_width="233dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/username"
            android:layout_gravity="center"
            android:layout_marginBottom="161dp"
            android:background="#fff"
            android:hint="         密码"
            android:paddingLeft="30dp" />

        <Button
            android:id="@+id/register"
            android:layout_width="229dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/username"
            android:layout_gravity="center"
            android:layout_marginBottom="68dp"
            android:background="#e49f66"
            android:text="注册"
            android:textAlignment="center"
            android:textColor="#f8fcfc"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="52dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/username"
            android:layout_marginStart="15dp"
            android:background="@drawable/touxiang"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tologin"
            android:layout_width="211dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView3"
            android:background="#17ffffff"
            android:gravity="center"
            android:text="已经有账号了？点击登录"
            android:textColor="#fff"
            android:textSize="18dp" />

    </RelativeLayout>


</LinearLayout>